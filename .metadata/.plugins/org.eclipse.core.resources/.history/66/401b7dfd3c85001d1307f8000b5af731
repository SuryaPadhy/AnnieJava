package com.annie.pattern;

public class Even {

	public static void main(String[] args) {
		int n =6;
		for(int i = 1;i<=n;i++)
		{int a=0;
			for(int j = 1;j<=i;j++)
			{ 
			
				int k = a+i;
				
					{
						System.out.print(k+ " ");
						a=a+2;
						
					}
				
			
				}
			System.out.println();
		}

	}

}
