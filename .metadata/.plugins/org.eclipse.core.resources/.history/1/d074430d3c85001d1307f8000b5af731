package com.annie.pattern;

public class Even {

	public static void main(String[] args) {
		int n =6;
		for(int i = 0;i<n;i++)
		{
			for(int j = 0;j<i;j++)
			{ int a =0;
			
				int k = a+i;
				
					{
						System.out.print(k+ " ");
						a=a+2;
						
					}
				
			
				}
			System.out.println();
		}

	}

}
